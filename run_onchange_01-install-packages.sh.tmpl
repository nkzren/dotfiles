	zsh vim neovim kitty tmux byobu fd-find ripgrep ranger sqlite \
	xclip feh jq curl net-tools flameshot \
	fira-code-fonts google-noto-cjk-fonts hack-fonts powerline-fonts \
	pipewire playerctl

{{- end }}

